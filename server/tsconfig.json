{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": [
    "node_modules/@prisma/client/index.d.ts",
    "prisma/seeds/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
